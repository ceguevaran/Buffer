.Header
	position relative
	&-background
		background-image url('../images/buffer_cover.jpg')
		background-repeat no-repeat
		background-size cover
		height 100vh
	&-video
		width 100%
		height 100vh
		overflow hidden
		> video
			width 100%
			min-height 100%
			object-fit cover
	&-nav
		font-size 16px
		display flex
		position fixed
		background-color color-gris-E
		z-index 500
		top 0
		width 100vw
		height 50px
		justify-content space-between
	&-logo
		width 106px
		height 26px
		padding 10px 0 10px 24px
		> img
			width 106px
			height 26px
	&-menu
		display block
		margin 0
		> li
			list-style none
			text-align center
			> a 
				display block
				color color-blanco-B
				padding 1em 0 1em 0
				margin 0 1em 0 1em
				&:active
					color white
	&-title
		font-weight 100
		width 100vw
		text-transform uppercase
		text-align center
		font-size 44px
		color white
		position absolute
		top 0
		bottom 0
		right 0
		left 0
		margin auto
		height 20%		
	&-layout
		font-size 0px
		> a 
			text-transform uppercase
			font-size 18px
			text-align center
			color color-blanco-A
			position absolute
			bottom 65px
			margin-left: auto;
			margin-right: auto;
			left:0;
			right:0;
			width 200px
			transition color .25s
			> aside
				font-size 30px
