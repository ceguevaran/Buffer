.Footer
	&-social
		background-color black
	&-sn
		padding 0
		margin 0
		display flex
		width 100%
		justify-content center
		align-items stretch
		> li 
			// display table-cell
			width 50px
			height 100px
			vertical-align middle
			position relative
		> li > a
			text-align center
			color color-blanco-B
			height 100%
			display block
			> span
				font-size 30px
				position absolute
				top 50%
				right 0
				left 0
				margin-top -15px
	&-credits
		display flex
		flex-wrap wrap
		justify-content space-around
		> p
			display inline-block
			text-align center
			width 90vw
			color color-gris-A
			font-size .75em
			padding-bottom 1.2em
			padding-top 1.3em
			
@media(min-width 760px)
	.Footer
		&-credits
			> p
				width auto 
			
@media(min-width 1024px)
	.Footer
		&-sn
			> li
				&:hover
					> a
						transition color .3s
						color white					
	.Wraper
		max-width 1024px
		margin 0 auto