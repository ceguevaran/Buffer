.Footer
	&-social
		background-color black
	&-sn
		padding 0
		margin 0
		display table
		width 100%
		justify-content space-around
		align-items stretch
		> li 
			display table-cell
			width 25%
			height 25vw
			vertical-align middle
			position relative
		> li > a
			text-align center
			color white
			height 100%
			display block
			> span
				font-size 38px
				position absolute
				top 50%
				right 0
				left 0
				margin-top -20px
	&-credits
		> p
			display inline-block
			color color-gris-A
			font-size .8em
			padding-bottom 1.2em
			padding-top 1.3em
			
@media(min-width 1000px)
	.Footer
		&-sn
			> li
				height 250px
				&:hover
					background-color color-gris-C
							
	.Wraper
		width 1000px
		margin 0 auto