.Layout
	&-proyectos
		font-size 0
		display flex
		flex-flow row wrap
	&-item
		width 50%
		position relative
		> a
			widht 100% 
			height auto
		> a > img 
			width 100%
	&-container
		width 50%
		display flex
		flex-direction column
		> article
			width 100%
	&-title
		font-weight 300
		font-size 2.8125em
		text-transform uppercase
		color color-gris-B
	&-nav
		display flex
		align-items center
	&-mask
		background-color black
		font-size 16px
		opacity 0
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		transition opacity .2s
		&:hover
			opacity .85
	&-description
		margin 0
		color color-verde
		position absolute
		bottom 100px
		left 8%
		font-size 3.75em
		font-weight 300
		text-transform uppercase
	&-paragraph
		margin 0
		color color-verde
		position absolute
		left 8%
		bottom 40px
		width 60%
		font-weight 300
@media(max-width 580px)
	.Layout
		&-item
		&-container
			width 100vw
		